# ========================================
# ONE ONLINE BACKEND - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ========================================
# Local development example:
DATABASE_URL=jdbc:postgresql://localhost:5432/oneonline_db
DATABASE_USER=oneonline_user
DATABASE_PASSWORD=your_secure_password_here

# Production example (Railway, Heroku, etc.):
# DATABASE_URL=jdbc:postgresql://hostname:5432/database_name
# DATABASE_USER=prod_user
# DATABASE_PASSWORD=super_secure_password

# ========================================
# JWT AUTHENTICATION
# ========================================
# IMPORTANT: Generate a secure secret for production!
# Generate with: openssl rand -base64 64
JWT_SECRET=YXNkZmphc2xrZGZqYXNsa2RqZmxrYXNqZGZsa2Fqc2RmbGtqYXNkbGZrYWpzZGxmamFsc2RramZhbHNrZGpmYWxza2RqZmxhc2tkamZhbHNrZGZq
JWT_EXPIRATION=86400000          # 24 hours in milliseconds
JWT_REFRESH_EXPIRATION=604800000 # 7 days in milliseconds

# ========================================
# OAUTH2 - GOOGLE
# ========================================
# Get credentials from: https://console.cloud.google.com/
# Steps:
# 1. Create project in Google Cloud Console
# 2. Enable Google+ API
# 3. Create OAuth 2.0 credentials
# 4. Add authorized redirect URI: http://localhost:8080/oauth2/callback/google
# 5. Copy Client ID and Client Secret here

GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ========================================
# OAUTH2 - GITHUB
# ========================================
# Get credentials from: https://github.com/settings/developers
# Steps:
# 1. Go to GitHub Developer Settings
# 2. Create new OAuth App
# 3. Set Authorization callback URL: http://localhost:8080/oauth2/callback/github
# 4. Copy Client ID and Client Secret here

GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# ========================================
# FRONTEND CONFIGURATION
# ========================================
# URL of your frontend application (for CORS)
# Local development:
FRONTEND_URL=http://localhost:3000

# Production:
# FRONTEND_URL=https://your-frontend-domain.com

# Multiple origins (comma-separated):
# FRONTEND_URL=http://localhost:3000,http://localhost:4200,https://your-domain.com

# ========================================
# SERVER CONFIGURATION
# ========================================
# Port where the backend will run
PORT=8080

# Spring profile (dev, prod, test)
SPRING_PROFILES_ACTIVE=dev

# ========================================
# LOGGING LEVELS (Optional)
# ========================================
# Uncomment to override default logging levels
# LOGGING_LEVEL_ROOT=INFO
# LOGGING_LEVEL_COM_ONEONLINE=DEBUG
# LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG

# ========================================
# FILE UPLOAD (Optional)
# ========================================
# Max file size for profile pictures
# MAX_FILE_SIZE=5MB
# MAX_REQUEST_SIZE=5MB

# ========================================
# WEBSOCKET CONFIGURATION (Optional)
# ========================================
# Max message size for WebSocket
# WEBSOCKET_MAX_TEXT_MESSAGE_SIZE=64000
# WEBSOCKET_MAX_BINARY_MESSAGE_SIZE=64000

# ========================================
# FLYWAY CONFIGURATION (Optional)
# ========================================
# Database migration settings
# FLYWAY_ENABLED=true
# FLYWAY_BASELINE_ON_MIGRATE=true
